<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph.xml"
    app:startDestination="@id/cityListFragment">

    <fragment
        android:id="@+id/cityListFragment"
        android:name="com.malek.randomcityapp.ui.list.fragments.CityListFragment"
        android:label="fragment_city_list"
        tools:layout="@layout/fragment_city_list" >

        <action
            android:id="@+id/action_cityListFragment_to_randomCityDetailsFragment"
            app:destination="@id/randomCityDetailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/randomCityDetailsFragment"
        android:name="com.malek.randomcityapp.ui.details.fragments.RandomCityDetailsFragment"
        android:label="RandomCityDetailsFragment"
        tools:layout="@layout/fragment_city_details">

    </fragment>
</navigation>